<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>customerScreen.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>editProduct</servlet-name>
        <servlet-class>fpt.servlet.editProduct</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>fpt.servlet.AddProduct</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>fpt.servlet.CartProcessing</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddToCart</servlet-name>
        <servlet-class>fpt.servlet.AddToCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCart</servlet-name>
        <url-pattern>/addtocart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Payment</servlet-name>
        <servlet-class>fpt.servlet.Payment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Payment</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConfirmPayment</servlet-name>
        <servlet-class>fpt.servlet.ConfirmPayment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmPayment</servlet-name>
        <url-pattern>/payment-confirm</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>EditSellerProfile</servlet-name>
        <servlet-class>fpt.servlet.EditSellerProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditSellerProfile</servlet-name>
        <url-pattern>/sellerprofile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditCustomerProfile</servlet-name>
        <servlet-class>fpt.servlet.EditCustomerProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCustomerProfile</servlet-name>
        <url-pattern>/customer-profile</url-pattern>
    </servlet-mapping>
</web-app>
